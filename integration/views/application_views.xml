<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List (Tree) View -->
    <record id="view_integration_application_list" model="ir.ui.view">
        <field name="name">integration.application.list</field>
        <field name="model">integration.application</field>
        <field name="arch" type="xml">
            <list string="Applications">
                <field name="name" />
                <field name="company_id" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_integration_application_form" model="ir.ui.view">
        <field name="name">integration.application.form</field>
        <field name="model">integration.application</field>
        <field name="arch" type="xml">
            <form string="Application">
                <sheet>
                    <div name="button_box">
                        <button string="Parameters" name="open_parameters" type="object"
                            icon="fa-list">
                            <field name="parameter_count" widget="statinfo" string="Parameters" />
                            <field name="parameter_ids" invisible="1" />
                        </button>
                    </div>
                    <group>
                        <field name="name" />
                        <field name="company_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_integration_application_search" model="ir.ui.view">
        <field name="name">integration.application.search</field>
        <field name="model">integration.application</field>
        <field name="arch" type="xml">
            <search string="Search Applications">
                <field name="name" />
                <field name="company_id" />
                <filter name="my_company" string="My Company" domain="[('company_id','=',uid)]" />
            </search>
        </field>
    </record>


    <!-- Action & Menu -->
    <record id="action_integration_application" model="ir.actions.act_window">
        <field name="name">Applications</field>
        <field name="res_model">integration.application</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_integration_application_root"
        name="Integration"
        sequence="99" />

    <menuitem id="menu_integration_application"
        name="Application"
        parent="menu_integration_application_root"
        sequence="0" />

    <menuitem id="menu_integration_application_list"
        name="Applications"
        parent="menu_integration_application"
        action="action_integration_application"
        sequence="10" />
</odoo>