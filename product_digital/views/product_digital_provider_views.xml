<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_digital_provider_list" model="ir.ui.view">
        <field name="name">product.digital.provider.list</field>
        <field name="model">product.digital.provider</field>
        <field name="arch" type="xml">
            <list string="Digital Product Providers">
                <field name="name"/>
                <field name="type"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    <record id="view_product_digital_provider_form" model="ir.ui.view">
        <field name="name">product.digital.provider.form</field>
        <field name="model">product.digital.provider</field>
        <field name="arch" type="xml">
            <form string="Digital Product Provider">
                <header>
                    <button string="Sync Products" type="object" name="sync_products" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="type"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_digital_provider" model="ir.actions.act_window">
        <field name="name">Product Digital Providers</field>
        <field name="res_model">product.digital.provider</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new digital product provider.
            </p>
        </field>
    </record>
</odoo>